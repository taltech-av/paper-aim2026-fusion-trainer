{
    "Summary": "Iseauto MaskFormer-Small RGB",
    "tags": [
        "Iseauto",
        "MaskFormer",
        "Small",
        "RGB"
    ],
    "CLI": {
        "backbone": "maskformer",
        "mode": "rgb",
        "path": "./xod_dataset/"
    },
    "General": {
        "device": "cuda:0",
        "epochs": 200,
        "batch_size": 8,
        "path_predicted_images": "output",
        "seed": 0,
        "resume_training": false,
        "reset_lr": false,
        "early_stop_patience": 200,
        "max_epochs": 2,
        "model_path": ""
    },
    "Log": {
        "logdir": "logs/iseauto/maskformer/config_1"
    },
    "MaskFormer": {
        "model_timm": "swinv2_small_window16_256",
        "pixel_decoder_channels": 256,
        "transformer_d_model": 256,
        "num_queries": 100,
        "clft_lr": 0.0001,
        "pretrained": true,
        "eos_coef": 0.1,
        "warmup_epochs": 10,
        "lr_scheduler": "poly",
        "lr_poly_power": 0.9,
        "lr_step_milestones": [
            0.75,
            0.9
        ],
        "lr_step_gamma": 0.1
    },
    "Dataset": {
        "name": "iseauto",
        "dataset_root": "./xod_dataset",
        "annotation_path": "annotation",
        "train_split": "./xod_dataset/train.txt",
        "val_split": "./xod_dataset/validation.txt",
        "splits": {
            "split_train": 0.6,
            "split_val": 0.2,
            "split_test": 0.2
        },
        "dataset_classes": [
            {
                "name": "background",
                "index": 0
            },
            {
                "name": "vehicle",
                "index": 1
            },
            {
                "name": "human",
                "index": 2
            }
        ],
        "train_classes": [
            {
                "name": "background",
                "index": 0,
                "weight": 0.5,
                "dataset_mapping": [
                    0
                ],
                "color": [
                    0,
                    0,
                    0
                ]
            },
            {
                "name": "vehicle",
                "index": 1,
                "weight": 4.0,
                "dataset_mapping": [
                    1
                ],
                "color": [
                    128,
                    0,
                    128
                ]
            },
            {
                "name": "human",
                "index": 2,
                "weight": 12.0,
                "dataset_mapping": [
                    2
                ],
                "color": [
                    0,
                    255,
                    255
                ]
            }
        ],
        "transforms": {
            "resize": 256,
            "random_rotate_range": 20,
            "p_flip": 0.5,
            "p_crop": 0.3,
            "p_rot": 0.4,
            "image_mean": [
                0.485,
                0.456,
                0.406
            ],
            "image_std": [
                0.229,
                0.224,
                0.225
